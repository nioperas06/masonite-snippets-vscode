    "mail subject": {
		"scope": "python",
		"prefix": "mail.subject",
        "body": [
            "mail.subject('${1:Welcome!}').to('${2:hello@email.com}').send('${3:Welcome!}')"
        ],
        "description": "mail subject"
    },
    "mail send_from": {
		"scope": "python",
		"prefix": "mail.send_from",
        "body": [
            "mail.send_from('${1:Welcome!}').to('${2:hello@email.com}').send('${3:Welcome!}')"
        ],
        "description": "mail send_from"
    },
    "mail template": {
		"scope": "python",
		"prefix": "mail.template",
        "body": [
            "mail.to('${1:hello@email.com}').template('${2:mail/welcome}').send()"
        ],
        "description": "Mail template"
    },
    "mail queue": {
		"scope": "python",
		"prefix": "mail.queue",
        "body": [
            "mail.to('${1:hello@email.com}').queue().send()"
        ],
        "description": "Mail queue"
